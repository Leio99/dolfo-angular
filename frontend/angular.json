{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "cli": {
        "cache": {
            "enabled": false
        }
    },
    "newProjectRoot": "projects",
    "projects": {
        "project-app": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "inlineStyle": true,
                    "style": "scss",
                    "skipTests": true,
                    "skipImport": true,
                    "changeDetection": "OnPush"
                },
                "@schematics/angular:class": {
                    "skipTests": true
                },
                "@schematics/angular:directive": {
                    "skipTests": true
                },
                "@schematics/angular:guard": {
                    "skipTests": true
                },
                "@schematics/angular:interceptor": {
                    "skipTests": true
                },
                "@schematics/angular:pipe": {
                    "skipTests": true
                },
                "@schematics/angular:resolver": {
                    "skipTests": true
                },
                "@schematics/angular:service": {
                    "skipTests": true
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "dolfo",
            "architect": {
                "build": {
                    "builder": "@angular/build:application",
                    "options": {
                        "stylePreprocessorOptions": {
                            "sass": {
                                "silenceDeprecations": ["import"]
                            }
                        },
                        "allowedCommonJsDependencies": ["lodash", "html2canvas"],
                        "outputPath": "dist",
                        "index": "src/index.html",
                        "browser": "src/main.ts",
                        "polyfills": ["zone.js"],
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            {
                                "glob": "**/*",
                                "input": "public"
                            },
                            "src/assets"
                        ],
                        "styles": ["src/app/styles/index.scss"],
                        "scripts": []
                    },
                    "configurations": {
                        "test": {
                            "baseHref": "/browser/",
                            "deployUrl": "/test/",
                            "optimization": true,
                            "aot": true,
                            "progress": true,
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "1.1MB",
                                    "maximumError": "1.1MB"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kB",
                                    "maximumError": "4kB"
                                }
                            ],
                            "outputHashing": "all",
                            "sourceMap": true,
                            "namedChunks": true,
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.test.ts"
                                }
                            ]
                        },
                        "production": {
                            "baseHref": "/project/",
                            "progress": true,
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "1.1MB",
                                    "maximumError": "1.1MB"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kB",
                                    "maximumError": "4kB"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "baseHref": "/",
                            "sourceMap": true,
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.development.ts"
                                }
                            ]
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular/build:dev-server",
                    "configurations": {
                        "production": {
                            "buildTarget": "project-app:build:production"
                        },
                        "development": {
                            "buildTarget": "project-app:build:development",
                            "prebundle": false
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular/build:extract-i18n"
                }
            }
        },
        "DolfoAngular": {
            "projectType": "library",
            "root": "projects/dolfo-angular",
            "sourceRoot": "projects/dolfo-angular/src",
            "prefix": "dolfo",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/dolfo-angular/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/dolfo-angular/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/dolfo-angular/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/dolfo-angular/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                }
            }
        }
    }
}
